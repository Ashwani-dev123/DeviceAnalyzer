<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background (Unprogressed area) -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="@color/textGrey" /> <!-- Gray color for unprogressed area -->
        </shape>
    </item>
    <!-- Progress (Progressed area) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dp" />
                <solid android:color="@color/colorToolbar" /> <!-- Green color for progress -->
            </shape>
        </clip>
    </item>
</layer-list>

