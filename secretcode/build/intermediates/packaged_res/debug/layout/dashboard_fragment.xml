<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    

                 
                          
                                                                           
           

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:tag="layout/dashboard_fragment_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">



        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/topBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    android:tag="binding_1"      >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.github.lzyzsd.circleprogress.ArcProgress
                                android:id="@+id/arc_progress"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                app:arc_stroke_width="@dimen/_8sdp"
                                app:arc_bottom_text="RAM"
                                app:arc_finished_color="@color/colorToolbar"
                                app:arc_progress="50"
                                app:arc_bottom_text_size="12sp"
                                app:arc_text_color="@color/textColor"
                                app:arc_unfinished_color="@color/textGrey" />

                            <TextView
                                android:id="@+id/ramTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:text="1800 / 5900 MB"
                                android:textColor="@color/textColor"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_marginTop="@dimen/_10sdp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/textView1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="System Storage"
                                        android:textColor="@color/textColor" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <ProgressBar
                                            android:id="@+id/systemStorage"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            style="@android:style/Widget.ProgressBar.Horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_6sdp"
                                            android:progressDrawable="@drawable/custom_progress_drawable"
                                            android:max="100"
                                            android:progress="50" />


                                        <TextView
                                            android:id="@+id/textView4"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="end"
                                            android:text="99 %"
                                            android:textColor="@color/textColor"
                                            android:textStyle="bold" />
                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp">

                                    <TextView
                                        android:id="@+id/textView3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Battery"
                                        android:textColor="@color/textColor" />

                                    <LinearLayout
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <ProgressBar
                                            android:id="@+id/batteryProgress"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            style="@android:style/Widget.ProgressBar.Horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_6sdp"
                                            android:progressDrawable="@drawable/custom_progress_drawable"
                                            android:max="100"
                                            android:progress="30" />


                                        <TextView
                                            android:id="@+id/batteryPercentage"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:gravity="end"
                                            android:textColor="@color/textColor"
                                            android:textStyle="bold"
                                            tools:text="30 %" />
                                    </LinearLayout>


                                </LinearLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>



                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView"
                    android:textColor="@color/textColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="CPU HISTORY" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <com.airbnb.epoxy.EpoxyRecyclerView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:orientation="vertical"
            app:spanCount="4"
            android:divider="@null"/>


        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/white"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/ivAndroid"
                    android:backgroundTint="@color/colorToolbar"
                    android:background="@drawable/ic_storage"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:layout_constraintEnd_toStartOf="@+id/tvPercentage"
                    app:layout_constraintStart_toEndOf="@+id/ivAndroid"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_13sdp"
                        android:text="Internal Storage"
                        android:textColor="@color/textColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ProgressBar
                        android:id="@+id/storageProgress"
                        android:layout_marginTop="@dimen/_5sdp"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_6sdp"
                        android:progressDrawable="@drawable/custom_progress_drawable"
                        android:max="100"
                        android:progress="50" />


                    <LinearLayout
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvFreeSpace"
                            android:textSize="@dimen/_11sdp"
                            android:text="Free: 90.8 GB,"
                            android:textColor="@color/darkGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tvTotalSapce"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textSize="@dimen/_11sdp"
                            android:text="Total: 90.8 GB"
                            android:textColor="@color/darkGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>



                </LinearLayout>


                <TextView
                    android:id="@+id/tvPercentage"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
         